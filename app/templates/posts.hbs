<h2>New Post</h2>
<div class="input-group mb-3">
	{{input value=title placeholder="Title" class="form-control"}}
</div>
<div class="input-group mb-3">
	{{input value=body placeholder="Body" class="form-control"}}
</div>
<button type="button" class="btn btn-dark" {{action "publishPost"}}>Publish new post</button>


<h2 style="margin-top:20px">Recent added posts</h2>
<div class="row">
{{#each model as |post|}}
<div class="col-lg-3">
	<div class="card" style="margin-bottom:20px;">
  <div class="card-body">
    <h5 class="card-title">{{post.title}}</h5>
    <p class="card-text">{{post.body}}</p>
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>
</div>
</div>
{{/each}}
</div>